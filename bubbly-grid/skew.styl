/* Creating Skewed divs
–––––––––––––––––––––––––––––––––––––––––––––––––– */

/* How to use it :

  .foo
    position: relative
    z-index: 1 // don't forget to declare a z-index value so your content stays visible
    &:before
      skew(top-right, 4)

*/

skew(origin = top-left, deg = 3, reset = false)
  content: ""
  width: 100%
  height: 100%
  position: absolute
  background: inherit
  z-index: -1
  outline: 1px solid transparent
  if origin is top-left
    top: 0
    left: 0
    transform-origin: right top
    transform: 'skewY(%sdeg)' % (deg)
  else if origin is top-right
    top: 0
    right: 0
    transform-origin: left top
    transform: 'skewY(-%sdeg)' % (deg)
  else if origin is bottom-left
    bottom: 0
    left: 0
    transform-origin: right bottom
    transform: 'skewY(-%sdeg)' % (deg)
  else if origin is bottom-right
    bottom: 0
    right: 0
    transform-origin: left bottom
    transform: 'skewY(%sdeg)' % (deg)
  else
    error('Values for origin can be: top-left, top-right, bottom-left or bottom-right')

  if reset is true
    content: initial
